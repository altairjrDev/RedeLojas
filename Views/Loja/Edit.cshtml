@model RedeLojas.ViewModel.LojaViewModel

@{
    ViewData["Title"] = "Editar Loja";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar Loja</h1>

<h4>Loja</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Clientes</label>
                <select asp-for="ClientesSelecionados" class="form-control" multiple="multiple">
                    @foreach (var cliente in Model.TodosClientes)
                    {
                    <option value="@cliente.Id" selected="@Model.ClientesSelecionados.Contains(cliente.Id)">@cliente.Nome</option>
                    }
                </select>
            </div>
            <div class="form-group" style="margin-top: 10px;">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

